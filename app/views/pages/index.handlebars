<div class="container">
    <div class="row">
        {{#each movies}}
            <div class="col-md-2">
                <div class="img-thumbnail">
                    <a href="/movie/{{_id}}">
                        <img src="{{poster}}" alt="{{title}}">
                    </a>
                    <div class="caption">
                        <h3>{{title}}</h3>
                        <a href="/movie/{{_id}}" class="btn btn-primary" role="button">观看预告片</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
