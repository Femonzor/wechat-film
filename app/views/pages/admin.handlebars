<div class="container">
    <div class="row">
        <form action="/admin/movie" class="col-sm-12" method="post">
            {{#if movie._id}}
            <input type="hidden" name="movie[_id]" value="{{movie._id}}">
            {{/if}}
            <div class="form-group row">
                <label for="input-category" class="col-sm-2 col-form-label">电影分类</label>
                <div class="col-sm-10">
                    <input name="movie[categoryName]" type="text"
                    id="input-category" class="form-control" value="{{movie.categoryName}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-title" class="col-sm-2 col-form-label">分类选择</label>
                {{#each categories as |category|}}
                <label for="" class="radio-inline">
                    {{#if ../movie._id}}
                    <input type="radio" name="movie[category]" value="{{category._id}}" {{compare category._id ../movie.category "checked"}}>{{category.name}}
                    {{else}}
                    <input type="radio" name="movie[category]" value="{{category._id}}">{{category.name}}
                    {{/if}}
                </label>
                {{/each}}
            </div>
            <div class="form-group row">
                <label for="input-title" class="col-sm-2 col-form-label">电影名字</label>
                <div class="col-sm-10">
                    <input name="movie[title]" type="text"
                    id="input-title" class="form-control" value="{{movie.title}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-director" class="col-sm-2 col-form-label">电影导演</label>
                <div class="col-sm-10">
                    <input name="movie[director]" type="text"
                    id="input-director" class="form-control" value="{{movie.director}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-country" class="col-sm-2 col-form-label">国家</label>
                <div class="col-sm-10">
                    <input name="movie[country]" type="text"
                    id="input-country" class="form-control" value="{{movie.country}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-language" class="col-sm-2 col-form-label">语种</label>
                <div class="col-sm-10">
                    <input name="movie[language]" type="text"
                    id="input-language" class="form-control" value="{{movie.language}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-poster" class="col-sm-2 col-form-label">海报地址</label>
                <div class="col-sm-10">
                    <input name="movie[poster]" type="text"
                    id="input-poster" class="form-control" value="{{movie.poster}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-flash" class="col-sm-2 col-form-label">片源地址</label>
                <div class="col-sm-10">
                    <input name="movie[flash]" type="text"
                    id="input-flash" class="form-control" value="{{movie.flash}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-year" class="col-sm-2 col-form-label">上映年代</label>
                <div class="col-sm-10">
                    <input name="movie[year]" type="text"
                    id="input-year" class="form-control" value="{{movie.year}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="input-summary" class="col-sm-2 col-form-label">电影简介</label>
                <div class="col-sm-10">
                    <textarea name="movie[summary]" id="input-summary"
                    class="form-control" rows="10">{{movie.summary}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-default" type="submit">录入</button>
                </div>
            </div>
        </form>
    </div>
</div>
